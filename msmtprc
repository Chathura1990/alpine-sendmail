# Set default values for all following accounts.
defaults
auth           on
tls            on
tls_starttls	on
tls_trust_file	/etc/ssl/certs/ca-certificates.crt
logfile		/var/log/sendmail.log

# Gmail
account	gmail
host	smtp.gmail.com
port	587
from	your@email
user	your@email
password	yourPassword

# Set a default account
account default : gmail
